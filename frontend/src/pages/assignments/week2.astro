---
import Vennbase from '@components/Vennbase/Vennbase';
import type { WeekMetadata } from '@types';
import WeekLayout from '@layouts/WeekLayout.astro';

export const metadata: WeekMetadata = {
  title: 'Project 2: Vennbase, an easy to query multimedia database',
  description: 'A database that can be queried and visualized by using logic and set theory concepts.',
  img: ''
}
---

<WeekLayout
  h1_title='Vennbase: an easy to query multimedia database'
  main_id='#logic-parser'
  week={2}
>
  <p>Non implemented yet</p>
  <Vennbase client:only="react" />
</WeekLayout>

<style is:global lang="scss">
  #vennbase {
    h1 {
      margin-bottom: 2px;
    }

    table#records-list {
      scrollbar-gutter: stable;
      border-collapse: collapse;
      max-height: 25rem;
      height: 25rem;
      overflow-y: auto;
      display: block;
      border: 1px solid rgb(208, 208, 208);

      // this is a thin, modern scrollbar
      &::-webkit-scrollbar {
        width: 5px;
      }
      &::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      &::-webkit-scrollbar-thumb {
        background: #c5c5c5;
      }
    }

    #query-form {
      display: flex;
      margin-top: 10px;
      align-items: center;
      justify-content: center;
    }

    #query-result-graph {
      margin-top: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .vennbase-status {
      color: #e2e2e2;
      background-color: #0b0b0b;
      font-size: 9px;
      display: inline-block;
      margin-bottom: 10px;
      border-radius: 5px;

      .status-badge {
        display: inline-block;
        padding: 3px 4px 3px 6px;
      }
      .status-text {
        display: inline-block;
        padding: 3px 6px 3px 4px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        margin: 0;

        &.connecting {
          background-color: #5a5a5a;
        }
        &.connected {
          background-color: #528d54;
        }
        &.down {
          background-color: #c57772;
        }
      }
    }
  }

  thead {
    position: sticky;
    top: 0;
  }

  tr {
    height: 30px;
    &:nth-child(even) {
      background: #f5f5f5;
    }
  }

  th {
    background: #eee;
    font-weight: bold;
    padding: 3px;
  }

  th, td {
    padding: 5px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }

  td {
    &.record-repr {
      display: flex;
      align-items: center;
      justify-content: center;
      img {
        max-height: 20px;
        max-width: 30px;
      }
    }
    &.record-info-mimetype {
      max-width: 150px;
    }
    &.record-info-name {
      width: 100%;
    }
  }

  th {
    text-align: left;
    &.record-repr {
      min-width: 40px;
    }
    &.record-info-mimetype {
      min-width: 150px;
    }
    &.record-info-name {
      width: 100%;
    }
  }
</style>

---
import Vennbase from '@components/Vennbase/Vennbase';
import type { ProjectMetadata } from '@types';
import ProjectLayout from '@layouts/ProjectLayout.astro';

export const metadata: ProjectMetadata = {
  title: 'Project 2: Vennbase, an easy to query multimedia database',
  description: 'A database that can be queried and visualized by using logic and set theory concepts.',
  img: ''
}
---

<ProjectLayout
  h1_title='Vennbase: an easy to query multimedia database'
  main_id='#logic-parser'
  project={2}
>
  <Vennbase client:only="react" />
</ProjectLayout>

<style is:global lang="scss">
  #vennbase {
    h1 {
      margin-bottom: 2px;
    }

    table#records-list {
      scrollbar-gutter: stable;
      border-collapse: collapse;
      max-height: 25rem;
      // height: 25rem;
      overflow-y: auto;
      display: block;
      border: 1px solid #d0d0d0;

      // this is a thin, modern scrollbar
      &::-webkit-scrollbar {
        width: 5px;
      }
      &::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      &::-webkit-scrollbar-thumb {
        background: #c5c5c5;
      }
      &::-webkit-scrollbar:horizontal {
        height: 5px;
      }
    }

    #query-form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-top: 10px;
      align-items: center;

      #rendered-input {
        width: 100%;
        display: grid;
        grid-template-rows: 1 1;
        font-family: 'mathfont';
        font-variant-ligatures: additional-ligatures;
        place-content: center;
        height: 80px;
        font-size: 1.5rem;
        border: 1px solid #d0d0d0;
        overflow-x: auto;

        div {
          margin: 0 auto;
        }

        #error-msg {
          font-size: 1rem;
          margin-top: 10px;
        }

        .token.space {
          font-size: 10px;
        }

        .token.error {
          color: rgb(0, 0, 0);
          text-decoration: underline;
          text-decoration-color: red;
          background-color: rgba(255, 0, 0, 0.2);
          text-decoration-thickness: 2px;
        }
      }

      input {
        width: 100%;
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-top: 10px;
        margin-bottom: 20px;
        font-size: 15px;
      }
    }

    #query-result-graph {
      margin-top: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .vennbase-status {
      color: #e2e2e2;
      background-color: #0b0b0b;
      font-size: 9px;
      display: inline-block;
      margin-bottom: 10px;
      border-radius: 5px;

      .status-badge {
        display: inline-block;
        padding: 3px 4px 3px 6px;
      }
      .status-text {
        display: inline-block;
        padding: 3px 6px 3px 4px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        margin: 0;

        &.connecting {
          background-color: #5a5a5a;
        }
        &.connected {
          background-color: #528d54;
        }
        &.down {
          background-color: #c57772;
        }
      }
    }
  }

  thead {
    position: sticky;
    top: 0;
  }

  tr {
    height: 30px;
    &:nth-child(even) {
      background: #f5f5f5;
    }
  }

  th {
    background: #eee;
    font-weight: bold;
    padding: 3px;
  }

  th, td {
    padding: 5px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }

  td {
    &.record-repr {
      display: flex;
      align-items: center;
      justify-content: center;
      img {
        max-height: 20px;
        max-width: 30px;
      }
    }
    &.record-info-mimetype {
      max-width: 150px;
    }
    &.record-info-name {
      width: 100%;
    }
    &.record-info-tags {
      max-width: 400px;
      overflow-x: auto;
      text-overflow: clip;
      & .record-tag {
        margin-right: 6px;
        padding: 2px 4px;
        background-color: #e9ebf5;
        font-size: 14px;
      }
      &::-webkit-scrollbar:horizontal {
        height: 3px;
      }
    }
  }

  th {
    text-align: left;
    &.record-repr {
      min-width: 40px;
    }
    &.record-info-mimetype {
      min-width: 100px;
    }
    &.record-info-name {
      width: 100%;
    }
  }
</style>
